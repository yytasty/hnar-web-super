{
  "allowJs": true,
  "include": ["src/**/*.js", "src/**/*.vue", "types/*", "./typed-router.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"]
  },
  "typeAcquisition": {
    "include": ["vue"]
  }
}
